<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <RelativeLayout
                android:id="@+id/rlTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal">
            <CheckBox
                    android:id="@+id/cbExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_expanded"
                    android:button="@null"
                    android:checked="false"
                    android:layout_marginRight="@dimen/spacing_small"/>
            <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_large"
                    android:layout_marginRight="@dimen/spacing_mini"
                    android:layout_toLeftOf="@id/cbExpand"
                    android:layout_alignParentLeft="true"
                    android:typeface="monospace"
                    android:text="George Pig crying peppa pig Toy Episodes 2015"
                    android:textColor="@color/black"/>
            <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:textColor="@color/gray_21"
                    android:textSize="@dimen/text_size_normal"
                    android:drawableLeft="@drawable/ic_view"
                    android:drawablePadding="@dimen/spacing_small"
                    android:typeface="monospace"
                    />
            <RelativeLayout
                    android:id="@+id/rlAction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvViews"
                    android:layout_marginTop="@dimen/spacing_small"
                    >
                <TextView
                        android:id="@+id/tvLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_21"
                        android:textSize="@dimen/text_size_normal"
                        android:drawableLeft="@drawable/ic_like"
                        android:drawablePadding="@dimen/spacing_small"
                        android:gravity="center"
                        android:typeface="monospace"
                        android:layout_centerVertical="true"
                        />
                <TextView
                        android:id="@+id/tvDisLikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_21"
                        android:textSize="@dimen/text_size_normal"
                        android:drawableLeft="@drawable/ic_dislike"
                        android:layout_toRightOf="@id/tvLikes"
                        android:drawablePadding="@dimen/spacing_small"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/spacing_normal"
                        android:typeface="monospace"
                        android:layout_centerVertical="true"
                        />
            </RelativeLayout>
        </RelativeLayout>
        <include layout="@layout/layout_user_information"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/rlTitle"
                 android:layout_marginTop="@dimen/spacing_normal"
                 ></include>
    </RelativeLayout>
</ScrollView>